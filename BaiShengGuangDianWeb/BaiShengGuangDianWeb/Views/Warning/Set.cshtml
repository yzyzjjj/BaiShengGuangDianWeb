@model object
@{
    ViewBag.Title = "预警设置";
    Layout = "_Layout";
}
<environment include="Development">
    <script src="~/mjs/Warning/set.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/Warning/set.min.js"></script>
</environment>
<section class="content-header flexStyle" style="justify-content: space-between;flex-wrap: wrap">
    <h1>@ViewBag.Title</h1>
    <div class="flexStyle">
        <button type="button" class="btn btn-success btn-sm" style="margin: 0 5px" id="updateDeviceWarningBtn" onclick="addUpWarn(true)">保存</button>
        <button type="button" class="btn btn-primary btn-sm" id="addDeviceWarningBtn" onclick="addUpWarn(false)">添加</button>
    </div>
</section>
<section class="content">
    <div class="row">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs ui-sortable-handle" id="typeBox">
                <li class="active" value="1"><a href="#devBox" data-toggle="tab" aria-expanded="true">设备</a></li>
                <li value="2"><a href="#otherBox" data-toggle="tab" aria-expanded="false">其他</a></li>
            </ul>
            <div class="tab-content no-padding">
                <div class="tab-pane active in" id="devBox">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs ui-sortable-handle" id="navUl">
                            <li class="active" value="1"><a href="#deviceData" data-toggle="tab" aria-expanded="true">设备数据</a></li>
                            <li value="2" id="productionLi"><a href="#productionData" data-toggle="tab" aria-expanded="false">生产数据</a></li>
                            <li value="3"><a href="#faultData" data-toggle="tab" aria-expanded="false">故障数据</a></li>
                            <li value="4"><a href="#otherData" data-toggle="tab" aria-expanded="false">其他数据</a></li>
                        </ul>
                        <div class="tab-content no-padding">
                            <div class="tab-pane active in" id="deviceData">
                                <div class="box box-primary">
                                    <div class="box-header with-border">
                                        <button class="btn btn-primary btn-sm pull-right" onclick="deviceRefreshTable()">刷新</button>
                                        <label class="control-label no-margin middle">预警名：</label>
                                        <select class="ms2 form-control" id="deviceWarn" style="width: 160px"></select>
                                    </div>
                                    <div class="box-body">
                                        <div class="form-group no-margin" style="display:flex">
                                            <div class="form-group no-padding" style="white-space: nowrap;">
                                                <label class="control-label middle">预警名：</label>
                                                <input class="form-control" id="warnName" maxlength="20" style="width: 160px; display: inline-block">
                                            </div>
                                            <div class="form-group no-padding" style="white-space: nowrap;">
                                                <label class="control-label no-margin middle">设备分类：</label>
                                                <select class="ms2 form-control" id="deviceType" style="width: 160px"></select>
                                            </div>
                                            <div class="form-group no-padding" style="white-space: nowrap;">
                                                <label class="control-label no-margin middle">选择脚本：</label>
                                                <select class="ms2 form-control" id="scriptSelect" style="width: 180px"></select>
                                            </div>
                                        </div>
                                        <div class="form-group" style="white-space: nowrap;">
                                            <label class="control-label no-margin pointer middle text-red" for="isStart">是否启用：</label>
                                            <input type="checkbox" class="icb_minimal" id="isStart">
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">选择设备：</label>
                                            <select class="form-control" id="deviceSelect"></select>
                                        </div>
                                        <div class="form-group">
                                            <div class="text-right">
                                                <button class="btn btn-warning btn-sm" onclick="deviceRefreshTable()">重置</button>
                                            </div>
                                            <div class="nav-tabs-custom">
                                                <ul class="nav nav-tabs ui-sortable-handle">
                                                    <li class="active"><a href="#npcVar" data-toggle="tab" aria-expanded="true">变量</a></li>
                                                    <li><a href="#npcIns" data-toggle="tab" aria-expanded="false">输入</a></li>
                                                    <li><a href="#npcOut" data-toggle="tab" aria-expanded="false">输出</a></li>
                                                </ul>
                                                <div class="tab-content no-padding">
                                                    <div class="tab-pane active in" id="npcVar">
                                                        <div class="box-body">
                                                            <div class="table-responsive mailbox-messages">
                                                                <table class="table table-hover table-striped dTable" id="npcVarList"></table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="tab-pane fade in" id="npcIns">
                                                        <div class="box-body">
                                                            <div class="table-responsive mailbox-messages">
                                                                <table class="table table-hover table-striped dTable" id="npcInsList"></table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="tab-pane fade in" id="npcOut">
                                                        <div class="box-body">
                                                            <div class="table-responsive mailbox-messages">
                                                                <table class="table table-hover table-striped dTable" id="npcOutList"></table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane fade in" id="productionData">
                                <div class="box box-primary">
                                    <div class="box-header with-border">
                                        <button class="btn btn-primary btn-sm pull-right" onclick="productionRefreshTable()">刷新</button>
                                        <label class="control-label no-margin middle">预警名：</label>
                                        <select class="ms2 form-control" id="productionWarn" style="width: 160px"></select>
                                    </div>
                                    <div class="box-body">
                                        <div class="form-group no-margin" style="display:flex">
                                            <div class="form-group no-padding" style="white-space: nowrap;">
                                                <label class="control-label middle">预警名：</label>
                                                <input class="form-control" id="productionWarnName" maxlength="20" style="width: 160px; display: inline-block">
                                            </div>
                                            <div class="form-group no-padding" style="white-space: nowrap;">
                                                <label class="control-label no-margin middle">设备分类：</label>
                                                <select class="ms2 form-control" id="productionDeviceClass" style="width: 160px"></select>
                                            </div>
                                            <div class="form-group no-padding" style="white-space: nowrap;">
                                                <label class="control-label no-margin middle">设备类型：</label>
                                                <select class="ms2 form-control" id="productionDeviceType" style="width: 180px"></select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label no-margin pointer middle text-red" for="productionIsStart">是否启用：</label>
                                            <input type="checkbox" class="icb_minimal" id="productionIsStart">
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">选择设备：</label>
                                            <select class="form-control" id="productionDeviceSelect"></select>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group text-right">
                                                <button class="btn btn-warning btn-sm" onclick="productionRefreshTable()">重置</button>
                                            </div>
                                            <div class="table-responsive mailbox-messages">
                                                <table class="table table-hover table-striped dTable" id="productionList"></table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade in" id="faultData">
                                @*<div class="box box-primary">
                                        <div class="box-header with-border">
                                            <button class="btn btn-primary btn-sm pull-right" onclick="">刷新</button>
                                            <label class="control-label no-margin middle">预警名：</label>
                                            <select class="ms2 form-control" id="faultWarn" style="width: 160px"></select>
                                        </div>
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label class="control-label middle">预警名：</label>
                                                <input class="form-control" id="faultWarnName" maxlength="20" style="width: 160px; display: inline-block">
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label no-margin pointer middle" for="productionIsStart">是否启用：</label>
                                                <input type="checkbox" class="icb_minimal" id="faultIsStart">
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label no-margin middle">设备分类：</label>
                                                <select class="ms2 form-control" id="faultDeviceClass" style="width: 160px"></select>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label no-margin middle">设备类型：</label>
                                                <select class="ms2 form-control" id="faultDeviceType" style="width: 180px"></select>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">选择设备：</label>
                                                <select class="form-control" id="faultDeviceSelect"></select>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-group text-right">
                                                    <button class="btn btn-warning btn-sm" onclick="">重置</button>
                                                </div>
                                                <div class="table-responsive mailbox-messages">
                                                    <table class="table table-hover table-striped" id="faultList"></table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>*@
                            </div>
                            <div class="tab-pane fade in" id="otherData"></div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade in" id="otherBox"></div>
            </div>
        </div>
    </div>
</section>