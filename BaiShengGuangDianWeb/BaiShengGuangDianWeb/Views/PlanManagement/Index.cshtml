@model object
@{
    ViewBag.Title = "计划管理";
    Layout = "_Layout";
}
<script src="~/mjs/PlanManagement/index.js"></script>
<section class="content ">
    <h2 class="text-center">计划管理</h2>
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title"></h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-primary btn-sm" onclick="addPlanModal()">添加</button>
                <button type="button" class="btn btn-success btn-sm" onclick="updatePlan()">日志</button>
            </div>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="planList"></table>
            </div>
        </div>
    </div>
    <!-- 添加生产计划模态框 -->
    <div class="modal fade" tabindex="-1" id="addPlanModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">添加新计划</h4>
                </div>
                <div class="modal-body">
                    <div class="modal-body box">
                        <div class="form-group" style="display: flex;align-items: center">
                            <label class="control-label" style="white-space: nowrap;margin: 0"><span class="text-red">* </span>新计划：</label>
                            <input class="form-control" id="addPlan" onfocusin="focusIn($(this))" maxlength="20" style="flex-basis: 205px;margin-right: 5px">
                            <select class="ms2 form-control" id="addPlanSelect" style="width: 180px"></select>
                            <button type="button" class="btn btn-info btn-sm" id="reuse" style="margin-left: 5px">复用</button>
                        </div>
                        <div class="form-group" style="display: flex;align-items: center">
                            <label class="control-label" style="white-space: nowrap;margin: 0">备注：</label>
                            <input class="form-control" id="addRemark" onfocusin="focusIn($(this))" maxlength="200">
                        </div>
                        <div class="form-group" style="display: flex;align-items: center">
                            <label class="control-label" style="white-space: nowrap;margin: 0">计划造价：<span style="text-decoration: underline; font-size: 25px;color:blue" id="planCost"></span></label>
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-info btn-sm" id="addPlanTableBtn"><i class="fa fa-plus">清单</i></button>
                        </div>
                        <div class="hidden" id="addPlanTable">
                            <label class="control-label textOverTop">清单：</label>
                            <div class="form-group" style="overflow-x: auto">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>序号</th>
                                            <th>货品编号</th>
                                            <th>货品类别</th>
                                            <th>货品名称</th>
                                            <th>供应商</th>
                                            <th>规格型号</th>
                                            <th>货品位置</th>
                                            <th>货品详情</th>
                                            <th>计划用量</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody id="addPlanBody"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="button" class="btn btn-primary" onclick="addPlan()">添加</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>