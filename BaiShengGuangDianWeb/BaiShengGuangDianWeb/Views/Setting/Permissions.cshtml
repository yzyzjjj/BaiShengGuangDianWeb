@model object

@{
    ViewBag.Title = "权限管理";
    Layout = "_Layout";
}

<environment include="Development">
    <script src="~/mjs/Setting/permissions.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/Setting/permissions.min.js"></script>
</environment>
<section class="content-header">
    <h1>@ViewBag.Title</h1>
</section>
<section class="content ">
    <div class="row">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs ui-sortable-handle" id="navUl">
                <li id="permissionGroupLi" class="active"><a class="text-red text-bold" href="#permissionGroupTab" data-toggle="tab" aria-expanded="true">权限组</a></li>
                <li id="permissionsLi"><a class="text-red text-bold" href="#permissionsTab" data-toggle="tab" aria-expanded="true">权限列表</a></li>
            </ul>
            <div class="tab-content no-padding" style="position: relative">
                <div class="tab-pane active" id="permissionGroupTab">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">权限列表</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-success btn-sm" id="updateAdministrator" onclick="updateAdministrator()">更新管理员</button>
                                <button type="button" class="btn btn-primary btn-sm" id="upPermissionGroup" onclick="upPermissionGroup()">修改</button>
                                <button type="button" class="btn btn-danger btn-sm" id="delPermissionGroup" onclick="delPermissionGroup()">删除</button>
                                <button type="button" class="btn btn-primary btn-sm" onclick="getPermissionsGroup()">刷新</button>
                            </div>
                        </div>
                        <div class="box-body" id="permissionGroupList">
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade in" id="permissionsTab">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">权限列表</h3>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-danger btn-sm" id="delPermission" onclick="delPermission()">删除</button>
                                <button type="button" class="btn btn-primary btn-sm" onclick="getPermissionsList()">刷新</button>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="table-responsive mailbox-messages">
                                <table class="table table-hover table-striped" id="permissionsList"></table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>