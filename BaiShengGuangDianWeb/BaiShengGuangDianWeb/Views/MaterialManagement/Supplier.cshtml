@model object
@{
    ViewBag.Title = "货品供应商管理";
    Layout = "_Layout";
}
<environment include="Development">
    <script src="~/mjs/MaterialManagement/supplier.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/MaterialManagement/supplier.min.js"></script>
</environment>
<section class="content ">
    <h2 class="text-center">供应商管理</h2>
    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="row">
                <div class="form-group col-md-6">
                    <div class="form-inline" style="display: flex">
                        <div style="flex: 1">
                            <label class="control-label" style="margin: 0;white-space:nowrap">类别：</label>
                            <select class="ms2 form-control categorySelect" id="categorySelect" style="width:85%"></select>
                        </div>
                        <div style="flex: 1">
                            <label class="control-label" style="margin: 0;white-space:nowrap">名称：</label>
                            <select class="ms2 form-control" id="nameSelect" style="width:85%"></select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-primary btn-sm" onclick="updateSupplier()">保存</button>
                        <button type="button" class="btn btn-primary btn-sm" onclick="addSupplierModal()">添加</button>
                        <button type="button" class="btn btn-danger btn-sm" onclick="delSupplier()">删除</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="supplierList"></table>
            </div>
        </div>
    </div>
    <!-- 添加供应商模态框 -->
    <div class="modal fade" tabindex="-1" id="addSupplierModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">添加新供应商</h4>
                </div>
                <div class="modal-body">
                    <div class="modal-body box">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-2 control-label"><span class="text-red">* </span>类别：</label>
                                <div class="col-sm-10">
                                    <select class="ms2 form-control categorySelect" id="addCategorySelect" style="width:100%"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"><span class="text-red">* </span>名称：</label>
                                <div class="col-sm-10">
                                    <select class="ms2 form-control" id="addNameSelect" style="width:100%"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"><span class="text-red">* </span>新供应商：</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="addSupplier" onfocusin="focusIn($(this))" maxlength="20">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">备注：</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="addRemark" onfocusin="focusIn($(this))" maxlength="200">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="button" class="btn btn-primary" onclick="addSupplier()">添加</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>