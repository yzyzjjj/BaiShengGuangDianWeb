@model object
@{
    ViewBag.Title = "货品供应商管理";
    Layout = "_Layout";
}
<script src="~/mjs/MaterialManagement/supplier.js"></script>
<section class="content ">
    <h2 class="text-center">供应商管理</h2>
    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="row">
                <div class="form-group col-md-6">
                    <div class="form-inline" style="display: flex">
                        <div style="flex: 1">
                            <label class="control-label" style="margin: 0;white-space:nowrap">类别：</label>
                            <select class="ms2 form-control" id="categorySelect" style="width:85%"></select>
                        </div>
                        <div style="flex: 1">
                            <label class="control-label" style="margin: 0;white-space:nowrap">名称：</label>
                            <select class="ms2 form-control" id="nameSelect" style="width:85%"></select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-primary btn-sm" onclick="updateSupplier()">保存</button>
                        <button type="button" class="btn btn-primary btn-sm" onclick="addSupplierModal()">添加</button>
                        <button type="button" class="btn btn-danger btn-sm" onclick="delSupplier()">删除</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="nameList"></table>
            </div>
        </div>
    </div>
</section>