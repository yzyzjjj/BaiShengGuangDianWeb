@model object
@{
    ViewBag.Title = "货品位置管理";
    Layout = "_Layout";
}
<script src="~/mjs/MaterialManagement/site.js"></script>
<section class="content ">
    <h2 class="text-center">位置管理</h2>
    <div class="box box-primary">
        <div class="box-header with-border">
            <label class="control-label">位置：</label>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-primary btn-sm" onclick="updateSite()">保存</button>
                <button type="button" class="btn btn-primary btn-sm" onclick="addSiteModal()">添加</button>
                <button type="button" class="btn btn-danger btn-sm" onclick="delSite()">删除</button>
            </div>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="cargoSiteList"></table>
            </div>
        </div>
    </div>
    <!-- 添加位置模态框 -->
    <div class="modal fade" tabindex="-1" id="addSiteModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">添加新位置</h4>
                </div>
                <div class="modal-body">
                    <div class="modal-body box">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-2 control-label"><span class="text-red">* </span>新位置：</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="addSite" onfocusin="focusIn($(this))" maxlength="20">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">备注：</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="addRemark" onfocusin="focusIn($(this))" maxlength="200">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="button" class="btn btn-primary" onclick="addSite()">添加</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>