@model object
@{
    ViewBag.Title = "货品规格管理";
    Layout = "_Layout";
}
<environment include="Development">
    <script src="~/mjs/MaterialManagement/specification.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/MaterialManagement/specification.min.js"></script>
</environment>
<section class="content-header">
    <h1>@ViewBag.Title</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>物料管理</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content ">
    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="row">
                <div class="form-group col-md-8">
                    <div class="form-inline" style="display: flex">
                        <div style="flex: 1">
                            <label class="control-label" style="margin: 0;white-space:nowrap">类别：</label>
                            <select class="ms2 form-control categorySelect" id="categorySelect" style="width:90%"></select>
                        </div>
                        <div style="flex: 1">
                            <label class="control-label" style="margin: 0;white-space:nowrap">名称：</label>
                            <select class="ms2 form-control" id="nameSelect" style="width:90%"></select>
                        </div>
                        <div style="flex: 1">
                            <label class="control-label" style="margin: 0;white-space:nowrap">供应商：</label>
                            <select class="ms2 form-control" id="supplierSelect" style="width:90%"></select>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-primary btn-sm" onclick="updateSpecification()">保存</button>
                        <button type="button" class="btn btn-primary btn-sm" onclick="addSpecificationModal()">添加</button>
                        <button type="button" class="btn btn-primary btn-sm" onclick="batchAddModal()">批量添加</button>
                        <button type="button" class="btn btn-danger btn-sm" onclick="delSpecification()">删除</button>
                        <button type="button" class="btn btn-primary btn-sm" onclick="getSpecificationList()">刷新</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="specificationList"></table>
            </div>
        </div>
    </div>
    <!-- 添加规格模态框 -->
    <div class="modal fade" tabindex="-1" id="addSpecificationModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">添加新规格</h4>
                </div>
                <div class="modal-body">
                    <div class="modal-body box">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-2 control-label"><span class="text-red">* </span>类别：</label>
                                <div class="col-sm-10">
                                    <select class="ms2 form-control categorySelect" id="addCategorySelect" style="width:100%"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"><span class="text-red">* </span>名称：</label>
                                <div class="col-sm-10">
                                    <select class="ms2 form-control" id="addNameSelect" style="width:100%"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"><span class="text-red">* </span>供应商：</label>
                                <div class="col-sm-10">
                                    <select class="ms2 form-control" id="addSupplierSelect" style="width:100%"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"><span class="text-red">* </span>新规格：</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="addSpecification" onfocusin="focusIn($(this))" maxlength="20">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">备注：</label>
                                <div class="col-sm-10">
                                    <input class="form-control" id="addRemark" onfocusin="focusIn($(this))" maxlength="200">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="button" class="btn btn-primary" onclick="addSpecification()">添加</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 批量添加规格模态框 -->
    <div class="modal fade" tabindex="-1" id="batchAddModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">批量添加新规格</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group text-right no-margin">
                        <button type="button" class="btn btn-default btn-sm batchAddBtn" onclick="resetBatchAddList()"><i class="fa fa-refresh"></i> 重置</button>
                        <button type="button" class="btn btn-default btn-sm batchAddBtn" onclick="addOneBatchAddList()"><i class="fa fa-plus"></i> 添加新项</button>
                    </div>
                    <div class="form-group" style="overflow-x: auto">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <td>序号</td>
                                    <td>类别</td>
                                    <td>名称</td>
                                    <td>供应商</td>
                                    <td>新规格</td>
                                    <td>备注</td>
                                    <td>操作</td>
                                </tr>
                            </thead>
                            <tbody id="batchAddList"></tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="batchAdd()" id="batchAdd">添加</button>
                </div>
            </div>
        </div>
    </div>
</section>