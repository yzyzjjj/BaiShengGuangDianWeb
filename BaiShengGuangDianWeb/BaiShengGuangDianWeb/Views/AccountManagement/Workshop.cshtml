@model object
@{
    ViewBag.Title = "车间管理";
    Layout = "_Layout";
}
<environment include="Development">
    <script src="~/mjs/AccountManagement/workshop.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/AccountManagement/workshop.min.js"></script>
</environment>
<section class="content-header">
    <h1>@ViewBag.Title</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>系统管理</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">车间列表</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-primary btn-sm" onclick="getWorkshopList()">刷新</button>
                        <button type="button" class="btn btn-success btn-sm" onclick="addWorkshopModel()" id="addWorkshopModalBtn">添加</button>
                        <button type="button" class="btn btn-warning btn-sm" onclick="updateWorkshop()" id="upWorkshopBtn">修改</button>
                        <button type="button" class="btn btn-danger btn-sm" onclick="delWorkshop()" id="delWorkshopBtn">删除</button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="table-responsive mailbox-messages">
                        <table class="table table-hover table-striped" id="workshopList"></table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="box box-primary">
                <div class="box-header">
                    <h5 class="box-title" id="unName" style="font-size: 16px">车间位置</h5>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-primary btn-sm" onclick="getSiteList()">刷新</button>
                        <button type="button" class="btn btn-success btn-sm" onclick="addSiteModel()" id="addSiteModalBtn">添加</button>
                        <button type="button" class="btn btn-warning btn-sm" onclick="updateSite()" id="upSiteBtn">修改</button>
                        <button type="button" class="btn btn-danger btn-sm" onclick="delSite()" id="delSiteBtn">删除</button>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-hover table-striped" id="siteList"></table>
                </div>
            </div>
        </div>
    </div>

    @*添加车间模态框*@
    <div class="modal fade" tabindex="-1" id="addWorkshopModel" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">添加车间</h4>
                </div>
                <div class="modal-body">
                    <div class="table-responsive mailbox-messages">
                        <table class="table table-hover table-striped" id="addWorkshopList"></table>
                    </div>
                    <div class="text-center">
                        <button type="button" class="btn btn-default btn-sm" id="addWorkshopListBtn"><i class="fa fa-plus"></i> 添加新项</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="addWorkshop()">添加</button>
                    <button type="button" class="btn btn-primary" onclick="addWorkshop(true)">添加并关闭</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                </div>
            </div>
        </div>
    </div>


    @*添加位置模态框*@
    <div class="modal fade" tabindex="-1" id="addSiteModel" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">添加车间位置</h4>
                </div>
                <div class="modal-body">
                    <div class="table-responsive mailbox-messages">
                        <table class="table table-hover table-striped" id="addSiteList"></table>
                    </div>
                    <div class="text-center">
                        <button type="button" class="btn btn-default btn-sm" id="addSiteListBtn"><i class="fa fa-plus"></i> 添加新项</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="addSite()">添加</button>
                    <button type="button" class="btn btn-primary" onclick="addSite(true)">添加并关闭</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                </div>
            </div>
        </div>
    </div>
</section>
