@model object

@{
    ViewBag.Title = "角色管理";
    Layout = "_Layout";
}
<link href="~/mcss/index.css" rel="stylesheet" type="text/css">
<script src="~/mjs/AccountManagement/roles.js"></script>

<div style="background:#f4f6f7 repeat-x; border: 1px solid #c1d3de; margin: 0; padding: 0;overflow: visible;"><h2 style="margin: 0;padding: 0; line-height: 33px;margin-left: 2px;font-weight: bold; font-size: 16px;font-family: 微软雅黑; color: #000000; ">角色管理</h2></div>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">角色</h3>
            <button type="button" class="btn btn-primary pull-right" onclick="getRoleList()" style="margin-right: 20px">重新加载</button>
            <button type="button" class="btn btn-primary pull-right" onclick="showAddRoles()" style="margin-right: 8px">添加新角色</button>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="rolesList"></table>
            </div>
        </div>
    </div>

    <!-- 模态框（Modal） -->
    <div class="modal fade" id="addRoleModel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">新角色信息</h4>
                </div>
                <div class="modal-body">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs ui-sortable-handle">
                            <li><a href="#div_proto" data-toggle="tab">角色属性</a></li>
                            <li class="active"><a href="#div_per" data-toggle="tab">权限列表</a></li>
                        </ul>
                        <div class="tab-content no-padding">
                            <div id="div_proto" class="tab-pane fade">
                                <div class="form-group">
                                    <label class="control-label">角色名称：</label>
                                    <div class="">
                                        <input class="form-control" id="addRoleName" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="addRoleNameTip"></label>
                                    </div>
                                </div>
                            </div>
                            <div id="div_per" class="tab-pane active in"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="addRoles()">添加</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="updataRoles" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">修改角色信息</h4>
                    <label class="hidden" id="updateId"></label>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <ul class="breadcrumb direct_gundong">
                            <li class="jolesAdd skins_roles">角色属性</li>
                            <li class="uppowerList">权限</li>
                        </ul>
                        <div class="box-body upRoles">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">角色名称：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updataRoleName" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="updateRoleNameTip"></label>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="box-body  updataChoice">


                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="updataRoles()">修改</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="tip_Power" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">提醒</h4>
                    <label class="hidden" id="updateId"></label>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <h3>你还未选择权限</h3>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>

                </div>
            </div>
        </div>
    </div>

</section>

