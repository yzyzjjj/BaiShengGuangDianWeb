@model object

@{
    ViewBag.Title = "用户管理";
    Layout = "_Layout";
}
<script src="~/mjs/AccountManagement/users.js"></script>
<link href="~/mcss/index.css" rel="stylesheet" type="text/css">
<div  style="background:#f4f6f7 repeat-x; border: 1px solid #c1d3de; margin: 0; padding: 0;overflow: visible;"><h2 style="margin: 0;padding: 0; line-height: 33px;margin-left: 2px;font-weight: bold; font-size: 16px;font-family: '微软雅黑'; color: #000000; ">用户管理</h2></div>		

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">用户</h3>
            <button type="button" class="btn btn-primary pull-right" onclick="getUsersList()" style="margin-right: 20px">重新加载</button>
            <button type="button" class="btn btn-primary pull-right" onclick="showAddUsers()" style="margin-right: 8px">添加用户</button>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="userTable"></table>
            </div>
        </div>
    </div>
 <!-- 添加用户（Modal） -->
    <div class="modal fade" id="addUsers" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">添加用户</h4>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <ul class="breadcrumb" >
                            <li class="usersAdd skins_roles">用户信息</li>
                            <li class="usersList">额外权限</li>
                            <li class="workman">生产员</li>
                        </ul>
                        <div class="box-body addUsers">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">用户名：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addUsersName" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="usersNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">姓名：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addPersonName" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="personNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">邮箱：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addEmail" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="emailNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">随机密码：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addPassword" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="passwordNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">角色：</label>
                                    <div class="col-sm-9 jolesChoice">
                                       
                                       
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">是否为生产员：</label>
                                    <div class="col-sm-9" style="margin-top: 6px">
                                        <label class="input-radio" style="vertical-align: middle; display: inline-block; cursor: pointer; line-height: 30px; margin-right: 15px;"><input style="margin-right: 5px; vertical-align: unset; font-size: 100%;" name="joinwork" value="0" type="radio">是</label>
                                        <label class="input-radio" style="vertical-align: middle; display: inline-block; cursor: pointer; line-height: 30px; margin-right: 15px;"><input style="margin-right: 5px; vertical-align: unset; font-size: 100%;" name="joinwork" checked="checked" value="1" type="radio">否</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">是否为检验：</label>
                                    <div class="col-sm-9" style="margin-top: 6px">
                                        <label class="input-radio" style="vertical-align: middle; display: inline-block; cursor: pointer; line-height: 30px; margin-right: 15px;"><input style="margin-right: 5px; vertical-align: unset; font-size: 100%;" name="checker" value="1" type="radio">是</label>
                                        <label class="input-radio" style="vertical-align: middle; display: inline-block; cursor: pointer; line-height: 30px; margin-right: 15px;"><input style="margin-right: 5px; vertical-align: unset; font-size: 100%;" name="checker" checked="checked" value="2" type="radio">否</label>
                                    </div>
                                </div>
                              </form>
                        </div>
                        <div class="box-body  usersChoice" >
                           

                        </div>
                        <div class="box-body  joinworker" style="margin-left: 200px">
                           

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="addUsers()">添加</button>
                </div>
            </div>
        </div>
    </div>
	<!-- 修改用户（Modal） -->
    <div class="modal fade" id="updataUsers" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">修改用户</h4>
                    <label class="hidden" id="updateId"></label>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <ul class="breadcrumb" >
                            <li class="usersAdd skins_roles">用户信息</li>
                            <li class="usersList">额外权限</li>
                            <li class="workman">生产员</li>
                        </ul>
                        <div class="box-body upUsers">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">用户名：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updataUsersName" onfocusin="focusIn($(this))" disabled>
                                        <label class="label-danger hidden" id="usersNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">姓名：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updataPersonName" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="personNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">邮箱：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updataEmail" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="emailNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">随机密码：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updataPassword" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="passwordNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">角色：</label>
                                    <div class="col-sm-9 upjolesChoice" >
                                       
                                       
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">是否为生产员：</label>
                                    <div class="col-sm-9" style="margin-top: 6px">
                                        <label class="input-radio" style="vertical-align: middle; display: inline-block; cursor: pointer; line-height: 30px; margin-right: 15px;"><input style="margin-right: 5px; vertical-align: unset; font-size: 100%;" name="upjoinwork" value="0" type="radio">是</label>
                                        <label class="input-radio" style="vertical-align: middle; display: inline-block; cursor: pointer; line-height: 30px; margin-right: 15px;"><input style="margin-right: 5px; vertical-align: unset; font-size: 100%;" name="upjoinwork" checked="checked" value="1" type="radio">否</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">是否为检验：</label>
                                    <div class="col-sm-9" style="margin-top: 6px">
                                        <label class="input-radio" style="vertical-align: middle; display: inline-block; cursor: pointer; line-height: 30px; margin-right: 15px;"><input style="margin-right: 5px; vertical-align: unset; font-size: 100%;" name="checker" value="1" type="radio">是</label>
                                        <label class="input-radio" style="vertical-align: middle; display: inline-block; cursor: pointer; line-height: 30px; margin-right: 15px;"><input style="margin-right: 5px; vertical-align: unset; font-size: 100%;" name="checker" checked="checked" value="2" type="radio">否</label>
                                    </div>
                                </div>

                            </form>
                        </div>
                        <div class="box-body  updataChoice">
                           

                        </div>
                        <div class="box-body  updataworker" style="margin-left: 200px">
                           

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="updataUsers()">修改</button>
                </div>
            </div>
        </div>
    </div>
</section>

