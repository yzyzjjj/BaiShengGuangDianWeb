@model object
@{
    ViewBag.Title = "点检计划设置";
    Layout = "_Layout";
}
<script src="~/mjs/DeviceSpotCheck/SpotCheckPlan.js"></script>
<section class="content ">
    <h2 class="text-center">点检计划设置</h2>
    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="row">
                <div class="form-group col-md-6">
                    <label class="control-label">点检计划：</label>
                    <div style="display: -webkit-inline-box; width: 84%">
                        <select class="form-control"></select>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="box-tools pull-right">
                        <div class="form-group pull-right">
                            <button type="button" class="btn btn-primary">添加计划</button>
                            <button type="button" class="btn btn-primary">修改计划</button>
                            <button type="button" class="btn btn-primary">删除计划</button>
                        </div>
                        <div>
                            <button type="button" class="btn btn-primary">添加点检项</button>
                            <button type="button" class="btn btn-primary">保存修改</button>
                            <button type="button" class="btn btn-primary">删除点检</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-body">
            <div class="form-group">
                <label class="control-label">已添加点检项：</label>
                <div class="table-responsive mailbox-messages">
                    <table class="table table-hover table-striped"></table>
                </div>
            </div>
        </div>
    </div>
</section>
