@model object
@{
    ViewBag.Title = "设备点检记录";
    Layout = "_Layout";
}

<environment include="Development">
    <script src="~/mjs/DeviceSpotCheck/SpotCheckLog.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/DeviceSpotCheck/SpotCheckLog.min.js"></script>
</environment>
<section class="content ">
    <h2 class="text-center" id="pageTitle">点检记录查询</h2>
    <div class="nav-tabs-custom">
        <ul class="nav nav-tabs ui-sortable-handle">
            <li class="active"><a href="#recent" data-toggle="tab" aria-expanded="true" class="setTitle">近期</a></li>
            <li><a href="#history" data-toggle="tab" aria-expanded="false" class="setTitle" id="historyHead">历史</a></li>
        </ul>
        <div class="tab-content no-padding">
            <div class="tab-pane active in" id="recent">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <div class="form-inline" style="display: flex">
                            <div style="flex: 1">
                                <label class="control-label">选择车间：</label>
                                <select class="ms2 form-control workShop" id="workShopRecent" style="width: 85%"></select>
                            </div>
                            <div style="flex: 1">
                                <label class="control-label">选择设备：</label>
                                <select class="ms2 form-control workShopDevice" id="workShopDeviceRecent" style="width: 85%"></select>
                            </div>
                            <div style="flex: 1">
                                <label class="control-label">点检计划：</label>
                                <select class="ms2 form-control spotPlan" id="spotPlanRecent" style="width: 85%"></select>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label class="control-label textOverTop" style="font-size:18px">本次检查：</label>
                            <br>
                            <label class="control-label textOverTop">计划：检验总数/已检验/不合格</label>
                            <div class="form-group" style="display: flex; flex-wrap: wrap" id="devicePlanDetail"></div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <div class="form-group">
                                <label class="control-label textOverTop" style="font-size: 18px">下次检查：</label>
                                <br>
                                <div class="flexStyle" style="justify-content:space-between">
                                    <label class="control-label">点检项：</label>
                                    <button type="button" class="btn btn-primary btn-sm" onclick="getNextExamineList()">刷新</button>
                                </div>
                            </div>
                            <div class="table-responsive mailbox-messages">
                                <table class="table table-striped" id="planCheckRecentList"></table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade in" id="history">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <div class="form-group" style="display: flex;align-items:center">
                            <label class="control-label" style="margin: 0;white-space:nowrap">时间：</label>
                            <div style="display: flex;align-items:center">
                                <input type="text" class="form_date form-control selectTime" id="startTime" style="flex-basis: 200px; cursor: pointer">
                                <label class="control-label" style="margin: 5px">至</label>
                                <input type="text" class="form_date form-control selectTime" id="endTime" style="flex-basis: 200px; cursor: pointer">
                            </div>
                        </div>
                        <div class="form-inline" style="display: flex">
                            <div style="flex: 1">
                                <label class="control-label">选择车间：</label>
                                <select class="ms2 form-control workShop" id="workShopHistory" style="width: 85%"></select>
                            </div>
                            <div style="flex: 1">
                                <label class="control-label">选择设备：</label>
                                <select class="ms2 form-control workShopDevice" id="workShopDeviceHistory" style="width: 85%"></select>
                            </div>
                            <div style="flex: 1">
                                <label class="control-label">点检计划：</label>
                                <select class="ms2 form-control spotPlan" id="spotPlanHistory" style="width: 85%"></select>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group" style="display: flex; justify-content: space-between;align-items: center">
                            <label class="control-label">点检记录：</label>
                            <div>
                                <button type="button" class="btn btn-primary btn-sm" onclick="updateDeviceCheck(0)">保存</button>
                                <button type="button" class="btn btn-primary btn-sm" onclick="detailPage(null, null, false)">刷新</button>
                            </div>
                        </div>
                        <div class="table-responsive mailbox-messages">
                            <table class="table table-hover table-striped" id="checkLogList"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 具体机台号页面模态框 -->
    <div class="modal fade" tabindex="-1" id="showDeviceModel" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">机台号详情页面</h4>
                </div>
                <div class="modal-body">
                    <div class="modal-body box">
                        <div class="form-group">
                            <label class="control-label">具体机台号：</label>
                            <textarea class="form-control" disabled="disabled" id="DeviceList" style="resize: vertical;overflow-y: scroll;"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 详情页面模态框 -->
    <div class="modal fade" tabindex="-1" id="updateDetailModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">详情页面</h4>
                </div>
                <div class="modal-body">
                    <div class="modal-body box">
                        <div class="form-group form-inline" style="display: flex">
                            <div style="flex: 1">
                                <label class="control-label">选择车间：</label>
                                <select class="ms2 form-control workShop" id="workShopDetail" style="width: 85%"></select>
                            </div>
                            <div style="flex: 1">
                                <label class="control-label">选择设备：</label>
                                <select class="ms2 form-control workShopDevice" id="workShopDeviceDetail" style="width: 85%"></select>
                            </div>
                            <div style="flex: 1">
                                <label class="control-label">点检计划：</label>
                                <select class="ms2 form-control spotPlan" id="spotPlanDetail" style="width: 85%"></select>
                            </div>
                        </div>
                        <div class="form-group" style="display: flex; justify-content: space-between;align-items: center">
                            <label class="control-label">点检项：</label>
                            <button type="button" class="btn btn-primary btn-sm" onclick="updateDeviceCheck(1)">保存</button>
                        </div>
                        <div class="table-responsive mailbox-messages">
                            <table class="table table-hover table-striped" id="devicePlanDetailList"></table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 图片查看页面模态框 -->
    <div class="modal fade" tabindex="-1" id="showImgModel" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">图片查看</h4>
                </div>
                <div class="modal-body">
                    <div class="modal-body box">
                        <div class="hidden" id="checkId"></div>
                        <div class="form-group">
                            <label class="control-label textOverTop">点检名称：<span id="checkName" style="text-decoration: underline; font-size: 20px;color:blue"></span></label>
                        </div>
                        <div class="form-group">
                            <label class="control-label textOverTop" id="imgOld">图片：</label>
                            <div class="form-group">
                                <div class="row" id="imgOldList"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label textOverTop">新图：</label>
                            <div id="addImgBox">
                                <input id="addImg" parent="addImgBox" type="file" name="filename[]" onchange="inputChange($(this), 'col-sm-9')">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="button" class="btn btn-primary" onclick="updateImg()">修改</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
