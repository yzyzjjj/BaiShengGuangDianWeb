@model object
@{
    ViewBag.Title = "计划配置";
}
<environment include="Development">
    <script src="~/mjs/ManufactureManagement/Plan.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/ManufactureManagement/Plan.min.js"></script>
</environment>
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>生产管理</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="form-group col-md-4 col-md-push-8" style="text-align: right;padding:0">
                <button type="button" class="btn btn-success btn-sm" onclick="">计划管理</button>
                <button type="button" class="btn btn-primary btn-sm" onclick="">新增</button>
                <button type="button" class="btn btn-danger btn-sm" onclick="">删除</button>
                <button type="button" class="btn btn-primary btn-sm" onclick="">保存</button>
            </div>
            <div class="col-md-8 col-md-pull-4" style="padding:0">
                <div class="flexStyle">
                    <div class="flexStyle" style="flex: 3;flex-wrap: wrap">
                        <label class="control-label" style="white-space: nowrap; margin: 0">选择状态：</label>
                        <select class="ms2 form-control" id="selectState" style="width:78%"></select>
                    </div>
                    <div class="flexStyle" style="flex: 4;flex-wrap: wrap">
                        <label class="control-label" style="white-space: nowrap; margin: 0">选择时间段：</label>
                        <div class="flexStyle">
                            <input type="text" class="form_date form-control" id="startTime" style="cursor: pointer">
                            <label class="control-label" style="margin: 5px">至</label>
                            <input type="text" class="form_date form-control" id="endTime" style="cursor: pointer">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-body">
            <div class="form-group">
                <div style="overflow-x: auto">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>选择</th>
                                <th>序号</th>
                                <th>计划号</th>
                                <th>开始时间</th>
                                <th>结束时间</th>
                                <th>预计用时</th>
                                <th>任务配置</th>
                                <th>实施</th>
                                <th>状态</th>
                                <th>详情</th>
                                <th>日志</th>
                            </tr>
                        </thead>
                        <tbody id="planConfigList"></tbody>
                    </table>
                </div>
            </div>
            <div class="form-group hidden">
                <div class="form-group flexStyle" style="justify-content:space-between">
                    <label class="control-label" style="white-space: nowrap">计划号：<span class="spanStyle" id="planText">20200101WF</span></label>
                    <div style="text-align: right">
                        <button type="button" class="btn btn-primary btn-sm" onclick="">新增</button>
                        <button type="button" class="btn btn-danger btn-sm" onclick="">删除</button>
                        <button type="button" class="btn btn-warning btn-sm" onclick="">重置</button>
                        <button type="button" class="btn btn-primary btn-sm" onclick="">保存</button>
                    </div>
                </div>
                <div style="overflow-x: auto">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>选择</th>
                                <th>序号</th>
                                <th>操作员</th>
                                <th>模块名</th>
                                <th>任务名</th>
                                <th>预计用时</th>
                                <th>绩效</th>
                                <th>关联</th>
                                <th>日志</th>
                            </tr>
                        </thead>
                        <tbody id="planItemList"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>