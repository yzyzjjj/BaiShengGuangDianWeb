@model object
@{
    ViewBag.Title = "计划配置";
}
<environment include="Development">
    <script src="~/mjs/ManufactureManagement/Plan.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/ManufactureManagement/Plan.min.js"></script>
</environment>
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>生产管理</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="form-group col-md-4 col-md-push-8" style="text-align: right; padding: 0">
                <button type="button" class="btn btn-success btn-sm" onclick="showPlanModal()">计划管理</button>
                <button type="button" class="btn btn-danger btn-sm" onclick="delPlanConfig()">删除</button>
                <button type="button" class="btn btn-primary btn-sm" onclick="updatePlanConfig()">保存</button>
            </div>
            <div class="col-md-8 col-md-pull-4" style="padding:0">
                <div class="flexStyle">
                    <div class="flexStyle" style="flex: 3;flex-wrap: wrap">
                        <label class="control-label" style="white-space: nowrap; margin: 0">选择状态：</label>
                        <select class="ms2 form-control" id="selectState" style="width:80%"></select>
                    </div>
                    <div class="flexStyle" style="flex: 4;flex-wrap: wrap">
                        <label class="control-label" style="white-space: nowrap; margin: 0">选择时间段：</label>
                        <div class="flexStyle">
                            <input type="text" class="form_date form-control selectTime text-center" id="startTime" style="cursor: pointer">
                            <label class="control-label" style="margin: 5px">至</label>
                            <input type="text" class="form_date form-control selectTime text-center" id="endTime" style="cursor: pointer">
                            <button type="button" class="btn btn-primary" onclick="getPlanConfig()" style="margin-left:3px">查询</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-body">
            <div class="form-group">
                <div class="table-responsive mailbox-messages">
                    <table class="table table-striped" id="planConfigList"></table>
                </div>
            </div>
            <div class="form-group hidden">
                <div class="form-group flexStyle" style="justify-content:space-between">
                    <label class="control-label" style="white-space: nowrap">计划号：<span class="spanStyle" id="planText">20200101WF</span></label>
                    <div style="text-align: right">
                        <button type="button" class="btn btn-primary btn-sm" onclick="">新增</button>
                        <button type="button" class="btn btn-danger btn-sm" onclick="">删除</button>
                        <button type="button" class="btn btn-warning btn-sm" onclick="">重置</button>
                        <button type="button" class="btn btn-primary btn-sm" onclick="">保存</button>
                    </div>
                </div>
                <div style="overflow-x: auto">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>选择</th>
                                <th>序号</th>
                                <th>操作员</th>
                                <th>模块名</th>
                                <th>任务名</th>
                                <th>预计用时</th>
                                <th>绩效</th>
                                <th>关联</th>
                                <th>日志</th>
                            </tr>
                        </thead>
                        <tbody id="planItemList"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- 计划管理模态框 -->
    <div class="modal fade" tabindex="-1" id="showPlanModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">配置管理</h4>
                </div>
                <div class="modal-body">
                    <div class="modal-body box">
                        <div class="form-group flexStyle">
                            <label class="control-label" style="white-space: nowrap;margin: 0">选择计划：</label>
                            <select class="ms2 form-control selectConfig" id="planSelect" style="width: 180px"></select>
                            <button type="button" class="btn btn-danger btn-sm" onclick="delPlan()" style="margin-left: 3px">删除</button>
                        </div>
                        <div class="form-group flexStyle">
                            <label class="control-label" style="white-space: nowrap;margin: 0">新计划：</label>
                            <input class="form-control" id="newPlan" onfocusin="focusIn($(this))" maxlength="200" style="flex-basis:180px">
                            <label class="flexStyle" style="margin: 0; padding-left: 5px;cursor:pointer"><input type="checkbox" id="planReuse" class="icb_minimal"><span class="textOverTop" style="margin-left: 5px">复用</span></label>
                            <button type="button" class="btn btn-primary btn-sm" onclick="addPlan()" style="margin-left: 3px">新增</button>
                            <button type="button" class="btn btn-primary btn-sm" onclick="updatePlan()" style="margin-left: 3px" id="updatePlanBtn">修改</button>
                        </div>
                        <div class="form-group hidden">
                            <div class="form-group">
                                <div style="text-align: right">
                                    <button type="button" class="btn btn-primary btn-sm" onclick="">新增</button>
                                    <button type="button" class="btn btn-danger btn-sm" onclick="">删除</button>
                                    <button type="button" class="btn btn-warning btn-sm" onclick="">重置</button>
                                    <button type="button" class="btn btn-primary btn-sm" onclick="">保存</button>
                                </div>
                            </div>
                            <div style="overflow-x: auto">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>序号</th>
                                            <th>操作员</th>
                                            <th>模块名</th>
                                            <th>任务名</th>
                                            <th>预计用时</th>
                                            <th>绩效</th>
                                            <th>关联</th>
                                            <th>排序</th>
                                            <th>选择</th>
                                        </tr>
                                    </thead>
                                    <tbody id="addPlanTaskList"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>