@model object
@{
    ViewBag.Title = "人员配置";
    //Layout = "_Layout";
}
<environment include="Development">
    <script src="~/mjs/ManufactureManagement/Processor.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/ManufactureManagement/Processor.min.js"></script>
</environment>
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> 生产管理</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content ">
    <div class="box box-primary">
        <div class="box-header with-border">
            <button type="button" class="btn btn-success" onclick="init(-1)">刷新</button>
        </div>
        <div class="box-body">
            <div class="form-group">
                <label class="control-label">项目组操作：</label>
                <div class="form-group form-inline">
                    <label class="control-label" for="GroupSelect">选择项目组：</label>
                    <div class="form-group no-margin" style="display: -webkit-inline-box">
                        <select class="ms2 form-control" id="GroupSelect" style="width: 120px"></select>
                    </div>
                    <button type="button" class="btn btn-danger" onclick="deleteGroup()">删除</button>
                    <label class="control-label" for="GroupName">项目组名称：</label>
                    <input class="form-control" id="GroupName" maxlength="40">
                    <button type="button" class="btn btn-primary" onclick="addGroup()">新增</button>
                    <button type="button" class="btn btn-primary" onclick="updateGroup()">修改</button>
                </div>
                <div class="form-group form-inline">
                    <label class="control-label" for="ProcessorSelect">选择操作员：</label>
                    <div class="form-group no-margin" style="display: -webkit-inline-box">
                        <select class="ms2 form-control" id="ProcessorSelect" style="width: 120px"></select>
                    </div>
                    <button type="button" class="btn btn-danger" onclick="deleteGroupProcessor()">删除</button>
                    <label class="control-label" for="AllProcessorSelect">新增操作员：</label>
                    <div class="form-group no-margin" style="display: -webkit-inline-box">
                        <select class="ms3 form-control" id="AllProcessorSelect" style="min-width: 450px" multiple="multiple"></select>
                    </div>
                    <button type="button" class="btn btn-primary" onclick="addGroupProcessor()">新增</button>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">绩效排名显示：</label>
                <div class="form-group form-inline">
                    <label class="control-label" for="DateTypeSelect">显示时段：</label>
                    <div class="form-group no-margin" style="display: -webkit-inline-box">
                        <select class="form-control" id="DateTypeSelect" style="width: 120px">
                            <option value="0">天</option>
                            <option value="1">周</option>
                            <option value="2">月</option>
                        </select>
                    </div>
                    <div class="form-group hidden" id="DayViv">
                        <label class="control-label" for="Day">选择开始日：</label>
                        <div class="form-group no-margin" style="display: -webkit-inline-box">
                            <select class="form-control" id="Day" style="width: 120px"></select>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary" onclick="updateGroupTime()">修改</button>
                    <div class="form-group">
                        <label class="control-label" for="Day1">本时段：</label>
                        <label class="control-label text-danger" id="Day1"></label>
                        <label class="control-label">至</label>
                        <label class="control-label text-danger" id="Day2"></label>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
