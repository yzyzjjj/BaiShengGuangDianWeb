@model object
@{
    ViewBag.Title = "数据报表";
    Layout = "_Layout";
}

<environment include="Development">
    <script src="~/mjs/ManufactureManagement/Statistic.js"></script>
    <script src="~/lib/echarts/echarts.min.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/ManufactureManagement/Statistic.min.js"></script>
    <script src="~/lib/echarts/echarts.min.js"></script>
</environment>
<section class="content-header">
    <h1>@ViewBag.Title</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>生产管理</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs ui-sortable-handle">
                <li class="active" id="aa"><a href="#performance_nav" data-toggle="tab" aria-expanded="true">绩效统计表</a></li>
                <li id="plan_li"><a href="#plan_time_nav" data-toggle="tab" aria-expanded="false">计划实际用时统计表</a></li>
                <li><a href="#task_time_nav" data-toggle="tab" aria-expanded="false">任务平均用时统计表</a></li>
                <li><a href="#task_finish_nav" data-toggle="tab" aria-expanded="false">任务完成情况汇总表</a></li>
            </ul>
            <div class="tab-content no-padding">
                <div class="tab-pane active in" id="performance_nav">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <div class="form-inline">
                                <div class="form-group flexStyle">
                                    <label class="control-label text-nowrap no-margin">切换工作组：</label>
                                    <select class="ms2 form-control work-group" id="workGroupSelect" style="width: 150px"></select>
                                </div>
                                <div class="form-group flexStyle">
                                    <label class="control-label text-nowrap no-margin">开始时间：</label>
                                    <input type="text" class="form_date form-control text-center pointer" id="sTime" autocomplete="off" style="min-width: 100px;max-width: 150px">
                                </div>
                                <div class="form-group flexStyle">
                                    <label class="control-label text-nowrap no-margin">结束时间：</label>
                                    <input type="text" class="form_date form-control text-center pointer" id="eTime" autocomplete="off" style="min-width: 100px;max-width: 150px">
                                    <button type="button" class="btn btn-primary" onclick="getPerformanceChart()" style="margin-left: 3px">查询</button>
                                </div>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="hidden" id="performance_chart" style="width: 100%;height:500px"></div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade in" id="plan_time_nav">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <div class="form-inline">
                                <div class="form-group flexStyle">
                                    <label class="control-label text-nowrap no-margin">切换工作组：</label>
                                    <select class="ms2 form-control work-group" id="planGroupSelect" style="width: 150px"></select>
                                </div>
                                <div class="form-group flexStyle">
                                    <label class="control-label text-nowrap no-margin">开始时间：</label>
                                    <input type="text" class="form_date form-control text-center pointer" id="plansTime" autocomplete="off" style="min-width: 100px;max-width: 150px">
                                </div>
                                <div class="form-group flexStyle">
                                    <label class="control-label text-nowrap no-margin">结束时间：</label>
                                    <input type="text" class="form_date form-control text-center pointer" id="planeTime" autocomplete="off" style="min-width: 100px;max-width: 150px">
                                    <button type="button" class="btn btn-primary" onclick="getPlanTimeChart()" style="margin-left: 3px">查询</button>
                                </div>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="flexStyle" style="align-items: flex-start">
                                <div style="position: relative; min-width: 10px; min-height: 16px;">
                                    <div class="form-group" id="plan_time_item">
                                        <label class="control-label text-nowrap">选择计划号：</label><br>
                                        <label class="flexStyle pointer"><input type="checkbox" class="icb_minimal" id="planAll" value="全选"><span class="textOverTop" style="margin-left: 5px">全选</span></label>
                                        <div style="margin-left: 20px; max-height: 450px; overflow: auto" id="planItem"></div>
                                    </div>
                                    <span class="glyphicon glyphicon-triangle-left pointer" aria-hidden="true" title="收起" onclick="foldList.call(this,'#plan_time_item')" style="position: absolute; right: 0; top: 5%; font-size: 20px; color: #00A9FC"></span>
                                </div>
                                <div class="hidden" id="plan_chart" style="width: 100%; height: 500px"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade in" id="task_time_nav">
                    <div class="box box-primary">
                        <div class="box-header">

                        </div>
                        <div class="box-body">

                        </div>
                    </div>
                </div>
                <div class="tab-pane fade in" id="task_finish_nav">
                    <div class="box box-primary">
                        <div class="box-header">

                        </div>
                        <div class="box-body">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>