@model object
@{
    ViewBag.Title = "任务配置";
}
<environment include="Development">
    <script src="~/mjs/ManufactureManagement/Task.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/ManufactureManagement/Task.min.js"></script>
</environment>
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>生产管理</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="flexStyle">
                <div class="flexStyle" style="flex: 1;flex-wrap: wrap">
                    <label class="control-label" style="white-space: nowrap; margin: 0">选择配置：</label>
                    <select class="ms2 form-control" id="selectConfig" style="flex-basis: 140px"></select>
                </div>
                <div class="flexStyle" style="flex: 1; justify-content: center;align-self: flex-end">
                    <button type="button" class="btn btn-success" onclick="">配置管理</button>
                    <button type="button" class="btn btn-success" onclick="" style="margin-left: 3px">模块管理</button>
                </div>
                <div class="flexStyle" style="flex: 1; justify-content: flex-end; align-self: flex-end;margin: 2px">
                    <button type="button" class="btn btn-primary btn-sm" onclick="">新增</button>
                    <button type="button" class="btn btn-primary btn-sm" onclick="" style="margin-left: 3px">删除</button>
                    <button type="button" class="btn btn-warning btn-sm" onclick="" style="margin-left: 3px">重置</button>
                    <button type="button" class="btn btn-primary btn-sm" onclick="" style="margin-left: 3px">保存</button>
                </div>
            </div>
        </div>
        <div class="box-body">
            <div style="overflow-x: auto">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>选择</th>
                            <th>序号</th>
                            <th>操作员</th>
                            <th>模块名</th>
                            <th>任务名</th>
                            <th>预计用时</th>
                            <th>绩效</th>
                            <th>任务描述</th>
                            <th>关联</th>
                            <th>排序</th>
                        </tr>
                    </thead>
                    <tbody id="configItem"></tbody>
                </table>
            </div>
        </div>
    </div>
</section>