@model object
@{
    ViewBag.Title = "任务配置";
}
<environment include="Development">
    <script src="~/mjs/ManufactureManagement/task.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/ManufactureManagement/task.min.js"></script>
</environment>
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>生产管理</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="flexStyle">
                <div class="flexStyle" style="flex: 1;flex-wrap: wrap">
                    <label class="control-label" style="white-space: nowrap; margin: 0">选择配置：</label>
                    <select class="ms2 form-control selectConfig" id="selectConfig" style="flex-basis: 140px"></select>
                </div>
                <div class="flexStyle" style="flex: 1; justify-content: center;align-self: flex-end">
                    <button type="button" class="btn btn-success" onclick="taskConfigModal()" id="taskConfigModalBtn">配置管理</button>
                    <button type="button" class="btn btn-success" onclick="taskModuleModal()" id="taskModuleModalBtn" style="margin-left: 3px">模块管理</button>
                </div>
                <div class="flexStyle" style="flex: 1; justify-content: flex-end; align-self: flex-end;margin: 2px">
                    <button type="button" class="btn btn-danger btn-sm" onclick="delTaskItem()" id="delTaskItemBtn">删除</button>
                    <button type="button" class="btn btn-warning btn-sm" onclick="resetTask()" style="margin-left: 3px" id="resetTaskBtn">重置</button>
                    <button type="button" class="btn btn-primary btn-sm" onclick="updateTask()" id="updateTaskBtn" style="margin-left: 3px">保存</button>
                </div>
            </div>
        </div>
        <div class="box-body">
            <div class="maxHeight" id="configTable" style="overflow: auto">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>选择</th>
                        <th>序号</th>
                        <th>操作员</th>
                        <th>模块名</th>
                        <th>任务名</th>
                        <th>预计用时</th>
                        <th>绩效</th>
                        <th>工艺要求</th>
                        <th>关联</th>
                        <th>排序</th>
                    </tr>
                    </thead>
                    <tbody id="configItem"></tbody>
                </table>
            </div>
            <div class="text-center">
                <button type="button" class="btn btn-default btn-sm" onclick="addTask()"><i class="fa fa-plus"></i> 添加新项</button>
            </div>
        </div>
    </div>
    <!-- 配置管理模态框 -->
    <div class="modal fade" tabindex="-1" id="taskConfigModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">配置管理</h4>
                </div>
                <div class="modal-body">
                    <div class="modal-body box">
                        <div class="form-group flexStyle">
                            <label class="control-label" style="white-space: nowrap;margin: 0">选择配置：</label>
                            <select class="ms2 form-control selectConfig" id="configSelect" style="width: 180px"></select>
                            <button type="button" class="btn btn-danger btn-sm" onclick="delConfig()" id="delConfigBtn" style="margin-left: 3px">删除</button>
                        </div>
                        <div class="form-group flexStyle">
                            <label class="control-label" style="white-space: nowrap;margin: 0">新配置：</label>
                            <input class="form-control" id="newConfig" maxlength="200" style="flex-basis:180px">
                            <label class="flexStyle" style="margin: 0; padding-left: 5px;cursor:pointer"><input type="checkbox" id="configReuse" class="icb_minimal"><span class="textOverTop" style="margin-left: 5px">复用</span></label>
                            <button type="button" class="btn btn-primary btn-sm" onclick="addConfig()" id="addConfigBtn" style="margin-left: 3px">新增</button>
                            <button type="button" class="btn btn-primary btn-sm" onclick="updateConfig()" style="margin-left: 3px" id="updateConfigBtn">修改</button>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 模块管理模态框 -->
    <div class="modal fade" tabindex="-1" id="taskModuleModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">模块管理</h4>
                </div>
                <div class="modal-body">
                    <div class="modal-body box">
                        <div class="form-group flexStyle">
                            <label class="control-label" style="white-space: nowrap;margin: 0">选择模块：</label>
                            <select class="ms2 form-control" id="moduleSelect" style="width: 180px"></select>
                            <button type="button" class="btn btn-danger btn-sm" onclick="delModule()" id="delModuleBtn" style="margin-left: 3px">删除</button>
                        </div>
                        <div class="form-group flexStyle">
                            <label class="control-label" style="white-space: nowrap;margin: 0">新模块：</label>
                            <input class="form-control" id="newModule" onfocusin="focusIn($(this))" maxlength="200" style="flex-basis:180px">
                            <label class="flexStyle" style="margin: 0; padding-left: 5px;cursor:pointer"><input type="checkbox" id="isCheckout" class="icb_minimal"><span class="textOverTop" style="margin-left: 5px">检验</span></label>
                            <button type="button" class="btn btn-primary btn-sm" onclick="addUpModule(0)" style="margin-left: 3px" id="addUpModuleBtn">新增</button>
                            <button type="button" class="btn btn-primary btn-sm" onclick="addUpModule(1)" style="margin-left: 3px" id="updateModuleBtn">修改</button>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>