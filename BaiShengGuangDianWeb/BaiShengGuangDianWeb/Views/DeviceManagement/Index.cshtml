                                <label class="adt label-danger hidden" id="updateMacAddressTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="updateIp"><span class="text-red">* </span>IP地址：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="updateIp" onfocusin="focusIn($(this))" maxlength="20">
