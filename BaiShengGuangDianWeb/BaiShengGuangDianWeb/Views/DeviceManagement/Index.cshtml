@model object
@{
    ViewBag.Title = "设备管理";
    Layout = "_Layout";
}
<environment include="Development">
    <script src="~/mjs/DeviceManagement/index.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/DeviceManagement/index.min.js"></script>
</environment>
<section class="content-header">
    <h1>@ViewBag.Title</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>设备管理</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">设备列表</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-primary" id="showAddModel" onclick="showAddModel()">添加新设备</button>
                <button type="button" class="btn btn-success" onclick="showBatchUpgradeModel()" id="showBatchUpgradeModelBtn">批量升级</button>
                <button type="button" class="btn btn-primary" onclick="getDeviceList()">刷新</button>
            </div>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="deviceList"></table>
            </div>
        </div>
    </div>
    <!-- 添加设备模态框（Modal） -->
    <div class="modal fade" tabindex="-1" id="addModel" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">新设备信息</h4>
                </div>
                <div class="modal-body box">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addCode"><span class="text-red">* </span>机台号：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="addCode" onfocusin="focusIn($(this))" maxlength="32">
                                <label class="adt label-danger hidden" id="addCodeTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addDeviceName"><span class="text-red">* </span>设备名：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="addDeviceName" onfocusin="focusIn($(this))" maxlength="32">
                                <label class="adt label-danger hidden" id="addDeviceNameTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addMacAddress">MAC地址：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="addMacAddress" onfocusin="focusIn($(this))" oninput='value=value.replace(/[^A-Fa-f0-9\-\:]+/g,"")' maxlength="48">
                                <label class="adt label-danger hidden" id="addMacAddressTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addIp"><span class="text-red">* </span>IP地址：</label>
                            <div class="col-sm-10">
                                <input class="dd form-control" id="addIp" onfocusin="focusIn($(this))" maxlength="20">
                                <label class="adt label-danger hidden" id="addIpTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addPort"><span class="text-red">* </span>端口：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="addPort" placeholder="默认60000" onfocusin="focusIn($(this))" maxlength="5">
                                <label class="adt label-danger hidden" id="addPortTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addIdentifier">识别码：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="addIdentifier" maxlength="100">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addDeviceCategory"><span class="text-red">* </span>设备类型：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="addDeviceCategory" onclick="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="addDeviceCategoryTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addDeviceModel"><span class="text-red">* </span>设备型号：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="addDeviceModel" onchange="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="addDeviceModelTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addScript"><span class="text-red">* </span>流程脚本版本：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="addScript" onchange="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="addScriptTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addFirmware"><span class="text-red">* </span>固件版本：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="addFirmware" onchange="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="addFirmwareTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addHardware"><span class="text-red">* </span>硬件版本：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="addHardware" onchange="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="addHardwareTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addApplication"><span class="text-red">* </span>应用层版本：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="addApplication" onchange="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="addApplicationTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addSite"><span class="text-red">* </span>所在场地：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="addSite" onchange="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="addSiteTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addAdministrator"><span class="text-red">* </span>设备管理员：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="addAdministrator" onchange="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="addAdministratorTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="addRemark">备注：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="addRemark" maxlength="255">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="addDevice()">添加</button>
                </div>
            </div>
        </div>
    </div>
