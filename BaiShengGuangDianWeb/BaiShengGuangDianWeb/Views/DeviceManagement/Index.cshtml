                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"><span class="text-red">* </span>设备管理员：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="upgradeAdministrator" maxlength="100" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">备注：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="upgradeRemark" maxlength="255" disabled="disabled">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                </div>
            </div>
        </div>
    </div>
    <!-- 模态框（Modal） -->
    <div class="modal fade" tabindex="-1" id="placeNameModel" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
