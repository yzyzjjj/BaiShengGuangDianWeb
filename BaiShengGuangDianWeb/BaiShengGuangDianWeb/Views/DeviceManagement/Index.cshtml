                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="updateDeviceModel"><span class="text-red">* </span>设备型号：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="updateDeviceModel" onchange="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="updateDeviceModelTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="updateScript"><span class="text-red">* </span>流程脚本版本：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="updateScript" onchange="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="updateScriptTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="updateFirmware"><span class="text-red">* </span>固件版本：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="updateFirmware" onchange="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="updateFirmwareTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="updateHardware"><span class="text-red">* </span>硬件版本：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="updateHardware" onchange="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="updateHardwareTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="updateApplication"><span class="text-red">* </span>应用层版本：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="updateApplication" onchange="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="updateApplicationTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="updateSite"><span class="text-red">* </span>所在场地：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="updateSite" onchange="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="updateSiteTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="updateAdministrator"><span class="text-red">* </span>设备管理员：</label>
                            <div class="col-sm-10">
                                <select class="ads form-control" id="updateAdministrator" onchange="focusIn($(this))"></select>
                                <label class="adt label-danger hidden" id="updateAdministratorTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="updateRemark">备注：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="updateRemark" maxlength="255">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="updateDevice()">修改</button>
                </div>
            </div>
        </div>
    </div>
    <!-- 设备升级模态框（Modal） -->
    <div class="modal fade" tabindex="-1" id="upgradeModel" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">设备升级</h4>
                </div>
                <div class="modal-body box">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">机台号：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="upgradeCode" maxlength="32" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">设备名：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="upgradeDeviceName" maxlength="32" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">设备状态：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="upgradeDeviceState" maxlength="32" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">MAC地址：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="upgradeMacAddress" maxlength="48" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">IP地址：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="upgradeIp" maxlength="20" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">端口：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="upgradePort" maxlength="5" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">识别码：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="upgradeIdentifier" maxlength="100" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">设备类型：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="upgradeDeviceCategory" maxlength="100" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">设备型号：</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="upgradeDeviceModel" maxlength="100" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"><span class="text-red">* </span>流程脚本版本：</label>
                            <div class="col-sm-10">
                                <div class="flexStyle">
                                    <select class="ads form-control" id="upgradeScript"></select>
                                    <button type="button" class="btn btn-primary upgrade-btn" onclick="deviceUpgrade.call(this,1)">升级</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"><span class="text-red">* </span>固件版本：</label>
                            <div class="col-sm-10">
                                <div class="flexStyle">
                                    <select class="ads form-control" id="upgradeFirmware"></select>
                                    <button type="button" class="btn btn-primary  upgrade-btn" onclick="deviceUpgrade.call(this,2)">升级</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"><span class="text-red">* </span>硬件版本：</label>
                            <div class="col-sm-10">
                                <div class="flexStyle">
                                    <select class="ads form-control" id="upgradeHardware"></select>
                                    <button type="button" class="btn btn-primary upgrade-btn" disabled="disabled" onclick="">升级</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"><span class="text-red">* </span>应用层版本：</label>
                            <div class="col-sm-10">
                                <div class="flexStyle">
                                    <select class="ads form-control" id="upgradeApplication"></select>
                                    <button type="button" class="btn btn-primary upgrade-btn" disabled="disabled" onclick="">升级</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"><span class="text-red">* </span>所在场地：</label>
