@model object

@{
    ViewBag.Title = "设备类型库管理";
    Layout = "_Layout";
}
<script src="~/mjs/DeviceManagement/deviceCategory.js"></script>
<h2 style="font-size: 26px; position: relative; top: 15px; left: 700px;">设备类型库管理</h2>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">设备类型库</h3>
            <button type="button" class="btn btn-primary pull-right" onclick="getCategoryList()" style="margin-right: 20px">重新加载</button>
            <button type="button" class="btn btn-primary pull-right" onclick="showAddCategory()" style="margin-right: 8px">添加类型库</button>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="categoryList"></table>
            </div>
        </div>
    </div>
    <!-- 模态框（Modal） -->
    <div class="modal fade" id="addModel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">设备类型信息</h4>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <div class="box-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">类型名：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addCategoryName" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="updateCategoryNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">描述：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addCategoryDesc">
                                        <label class="label-danger hidden" id="updateCategoryDescTip"></label>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="addCategory()">添加</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="updateCategory" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" >场地信息</h4>
                    <label class="hidden" id="updateId"></label>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <div class="box-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">类型名：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateCategoryName">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">描述：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateCategoryDesc">
                                    </div>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="updateCategory()">修改</button>
                </div>
            </div>
        </div>
    </div>
</section>


