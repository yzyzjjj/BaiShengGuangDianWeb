@model object
@{
    ViewBag.Title = "硬件库管理";
    Layout = "_Layout";
}
<environment include="Development">
    <script src="~/mjs/DeviceManagement/hardwareLibrary.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/DeviceManagement/hardwareLibrary.min.js"></script>
</environment>
<section class="content-header">
    <h1>@ViewBag.Title</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>设备管理</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">硬件库</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-primary" id="showAddHardwareModal" onclick="showAddHardwareModal()">添加新硬件</button>
                <button type="button" class="btn btn-primary" onclick="getHardwareList()">刷新</button>
            </div>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="hardwareList"></table>
            </div>
        </div>
    </div>
    <!-- 模态框（Modal） -->
    <div class="modal fade" id="addModel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">新硬件信息</h4>
                </div>
                <div class="modal-body box">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-3 control-label"><span class="text-red">* </span>名称：</label>
                            <div class="col-sm-9">
                                <input class="dd form-control" id="addHardwareName" onfocusin="focusIn($(this))" maxlength="32">
                                <label class="adt label-danger hidden" id="addHardwareNameTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label"><span class="text-red">* </span>输入口数量：</label>
                            <div class="col-sm-9">
                                <input class="dd form-control" id="addInputNumber" oninput="value=value.replace(/[^\d]/g,'')" onfocusin="focusIn($(this))" maxlength="9">
                                <label class="adt label-danger hidden" id="addInputNumberTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label"><span class="text-red">* </span>输出口数量：</label>
                            <div class="col-sm-9">
                                <input class="dd form-control" id="addOutputNumber" oninput="value=value.replace(/[^\d]/g,'')" onfocusin="focusIn($(this))" maxlength="9">
                                <label class="adt label-danger hidden" id="addOutputNumberTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label"><span class="text-red">* </span>数模转换数量：</label>
                            <div class="col-sm-9">
                                <input class="dd form-control" id="addDacNumber" oninput="value=value.replace(/[^\d]/g,'')" onfocusin="focusIn($(this))" maxlength="9">
                                <label class="adt label-danger hidden" id="addDacNumberTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label"><span class="text-red">* </span>模数转换数量：</label>
                            <div class="col-sm-9">
                                <input class="dd form-control" id="addAdcNumber" oninput="value=value.replace(/[^\d]/g,'')" onfocusin="focusIn($(this))" maxlength="9">
                                <label class="adt label-danger hidden" id="addAdcNumberTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label"><span class="text-red">* </span>主轴数量：</label>
                            <div class="col-sm-9">
                                <input class="dd form-control" id="addAxisNumber" oninput="value=value.replace(/[^\d]/g,'')" onfocusin="focusIn($(this))" maxlength="9">
                                <label class="adt label-danger hidden" id="addAxisNumberTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label"><span class="text-red">* </span>通用串口数量：</label>
                            <div class="col-sm-9">
                                <input class="dd form-control" id="addComNumber" oninput="value=value.replace(/[^\d]/g,'')" onfocusin="focusIn($(this))" maxlength="9">
                                <label class="adt label-danger hidden" id="addComNumberTip"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">描述：</label>
                            <div class="col-sm-9">
                                <input class="dd form-control" id="addDescription" maxlength="255">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="addHardware()">添加</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="updateHardwareModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">硬件库信息</h4>
                    <label class="hidden" id="updateId"></label>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <div class="box-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label"><span class="text-red">* </span>名称：</label>
                                    <div class="col-sm-9">
                                        <input class="dd form-control" id="updateHardwareName" onfocusin="focusIn($(this))" maxlength="32">
                                        <label class="adt label-danger hidden" id="updateHardwareNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label"><span class="text-red">* </span>输入口数量：</label>
                                    <div class="col-sm-9">
                                        <input class="dd form-control" id="updateInputNumber" oninput="value=value.replace(/[^\d]/g,'')" onfocusin="focusIn($(this))" maxlength="9">
                                        <label class="adt label-danger hidden" id="updateInputNumberTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label"><span class="text-red">* </span>输出口数量：</label>
                                    <div class="col-sm-9">
                                        <input class="dd form-control" id="updateOutputNumber" oninput="value=value.replace(/[^\d]/g,'')" onfocusin="focusIn($(this))" maxlength="9">
                                        <label class="adt label-danger hidden" id="updateOutputNumberTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label"><span class="text-red">* </span>数模转换数量：</label>
                                    <div class="col-sm-9">
                                        <input class="dd form-control" id="updateDacNumber" oninput="value=value.replace(/[^\d]/g,'')" onfocusin="focusIn($(this))" maxlength="9">
                                        <label class="adt label-danger hidden" id="updateDacNumberTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label"><span class="text-red">* </span>模数转换数量：</label>
                                    <div class="col-sm-9">
                                        <input class="dd form-control" id="updateAdcNumber" oninput="value=value.replace(/[^\d]/g,'')" onfocusin="focusIn($(this))" maxlength="9">
                                        <label class="adt label-danger hidden" id="updateAdcNumberTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label"><span class="text-red">* </span>主轴数量：</label>
                                    <div class="col-sm-9">
                                        <input class="dd form-control" id="updateAxisNumber" oninput="value=value.replace(/[^\d]/g,'')" onfocusin="focusIn($(this))" maxlength="9">
                                        <label class="adt label-danger hidden" id="updateAxisNumberTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label"><span class="text-red">* </span>通用串口数量：</label>
                                    <div class="col-sm-9">
                                        <input class="dd form-control" id="updateComNumber" oninput="value=value.replace(/[^\d]/g,'')" onfocusin="focusIn($(this))" maxlength="9">
                                        <label class="adt label-danger hidden" id="updateComNumberTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">描述：</label>
                                    <div class="col-sm-9">
                                        <input class="dd form-control" id="updateDescription" maxlength="255">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="updateHardware()">修改</button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- 模态框（Modal） -->
<div class="modal fade" tabindex="-1" id="descriptionModel" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">备注</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label" for="description">描述：</label>
                    <textarea class="form-control" disabled="disabled" id="description" style="resize: vertical; height: 100px; overflow-y: scroll;"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>