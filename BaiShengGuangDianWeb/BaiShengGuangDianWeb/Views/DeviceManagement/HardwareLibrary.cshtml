@model object

@{
    ViewBag.Title = "硬件库管理";
    Layout = "_Layout";
}
<script src="~/mjs/DeviceManagement/hardwareLibrary.js"></script>
<section class="content">
    <h2 style="font-size: 24px;text-align: center; height: 30px; line-height: 30px;">硬件库管理</h2>
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">硬件库</h3>
            <button type="button" class="btn btn-primary pull-right" onclick="getHardWareList()" style="margin-right: 20px">重新加载</button>
            <button type="button" class="btn btn-primary pull-right" onclick="showHardWare()" style="margin-right: 8px">添加硬件库</button>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="hardwareList"></table>
            </div>
        </div>
    </div>
    <!-- 模态框（Modal） -->
    <div class="modal fade" id="addModel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">硬件库信息</h4>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <div class="box-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">版本名称：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addHardName" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="updateHardNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">输入口数量：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addInputNumber" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="updateInputNumberTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">输出口数量：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addOutputNumber" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="updateOutputNumberTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">数模转换数量：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addDacNumber" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="updateDacNumberTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">模数转换数量：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addAdcNumber" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="updateAdcNumberTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">主轴数量：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addAxisNumber">
                                        <label class="label-danger hidden" id="updateAxisNumberTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">通用串口数量：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addComNumber">
                                        <label class="label-danger hidden" id="updateComNumberTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">描述：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addDescription">
                                        <label class="label-danger hidden" id="updateDescripTip"></label>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="addHardWare()">添加</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="updateHard" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">硬件库信息</h4>
                    <label class="hidden" id="updateId"></label>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <div class="box-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">版本名称：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateHardName">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">输入口数量：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateInputNumber">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">输出口数量：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateOutputNumber">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">数模转换数量：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateDacNumber">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">模数转换数量：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateAdcNumber">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">主轴数量：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateAxisNumber">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">通用串口数量：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateComNumber">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">描述：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateDescription">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="updateHard()">修改</button>
                </div>
            </div>
        </div>
    </div>
</section>

