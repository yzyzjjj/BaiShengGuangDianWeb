@model object

@{
    ViewBag.Title = "固件库管理";
    Layout = "_Layout";
}

<h2 style="font-size: 26px; position: relative; top: 15px; left: 700px;">固件库管理</h2>
<script src="~/mjs/DeviceManagement/firmwareLibrary.js"></script>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">固件库</h3>
            <button type="button" class="btn btn-primary pull-right" onclick="getFirmList()" style="margin-right: 20px">重新加载</button>
            <button type="button" class="btn btn-primary pull-right" onclick="showAddFireLibrary()" style="margin-right: 8px">添加固件库</button>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="firmlibraryList"></table>
            </div>
        </div>
    </div>
    <!-- 模态框（Modal） -->
    <div class="modal fade" id="addModel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">固件库信息</h4>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <div class="box-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">固件版本名称：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addFireName" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="updateFireNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">变量数量：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addFireNumber" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="updateFireNumberTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">通信协议：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addCommunication" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="updateCommunicationTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">程序文件的位置及名称：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addLocationName">
                                        <label class="label-danger hidden" id="updateLocationNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">描述：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addDescr">
                                        <label class="label-danger hidden" id="updateDescrTip"></label>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="addFirmLibrary()">添加</button>
                </div>
            </div>
        </div>
    </div>
	
	<div class="modal fade" id="updateFirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" >固件库信息</h4>
                    <label class="hidden" id="updateId"></label>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <div class="box-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">固件版本名称：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateFirmName">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">变量数量：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateFirmNumber">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">通信协议：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateFireCommunication">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">程序文件的位置及名称：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateFirePath">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">描述：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateFireDes">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="updateFirm()">修改</button>
                </div>
            </div>
        </div>
    </div>
</section>

