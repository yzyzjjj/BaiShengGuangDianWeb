@model object

@{
    ViewBag.Title = "设备控制";
    Layout = "_Layout";
}

<h2>设备控制</h2>
<script src="~/mjs/DeviceManagement/deviceControl.js"></script>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">设备列表</h3>
            <div class="btn-group pull-right">
                <button type="button" class="btn btn-primary" onclick="getDeviceList()">重新加载</button>
                <button type="button" class="btn btn-primary" onclick="showAddModel()">添加新设备</button>
            </div>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="deviceList"></table>
            </div>
        </div>
    </div>
</section>
