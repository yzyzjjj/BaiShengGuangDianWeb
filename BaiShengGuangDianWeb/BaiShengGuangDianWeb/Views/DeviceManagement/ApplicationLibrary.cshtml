@model object

@{
    ViewBag.Title = "应用层库管理";
    Layout = "_Layout";
}
<h2 style="font-size: 26px; position: relative; top: 15px; left: 700px;">应用层库管理</h2>
<script src="~/mjs/DeviceManagement/applicationLibrary.js"></script>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">应用库</h3>
            <button type="button" class="btn btn-primary pull-right" onclick="getApplicationList()" style="margin-right: 20px">重新加载</button>
            <button type="button" class="btn btn-primary pull-right" onclick="showAddApplication()" style="margin-right: 8px">添加应用库</button>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="applicationList"></table>
            </div>
        </div>
    </div>
    <!-- 模态框（Modal） -->
    <div class="modal fade" id="addModel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">应用层库信息</h4>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <div class="box-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">名称：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addApplicationName" onfocusin="focusIn($(this))">
                                        <label class="label-danger hidden" id="updateApplicationNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">程序文件的位置及名称：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addFilePath">
                                        <label class="label-danger hidden" id="updateFilePathTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">描述：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addDesc">
                                        <label class="label-danger hidden" id="updateDescTip"></label>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="addApplication()">添加</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="updateApplication" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" >场地信息</h4>
                    <label class="hidden" id="updateId"></label>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <div class="box-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="">名称：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateApplicationName">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">程序文件的位置及名称：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateFilePath">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">描述：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateDesc">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="updateApplication()">修改</button>
                </div>
            </div>
        </div>
    </div>
</section>

