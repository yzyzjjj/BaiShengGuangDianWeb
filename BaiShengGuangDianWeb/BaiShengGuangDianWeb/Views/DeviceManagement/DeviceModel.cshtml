@model object

@{
    ViewBag.Title = "设备型号库管理";
    Layout = "_Layout";
}

<script src="~/mjs/DeviceManagement/deviceModel.js"></script>
<section class="content">
    <h2 class="text-center">设备型号库管理</h2>
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">设备型号</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-primary" id="showAddModel" onclick="showAddModel()">添加设备型号</button>
                <button type="button" class="btn btn-primary" onclick="getDeviceModelList()">重新加载</button>
            </div>
        </div>
        <div class="box-body">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped" id="deviceModelList"></table>
            </div>
        </div>
    </div>
    <!-- 模态框（Modal） -->
    <div class="modal fade" id="addModel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">新设备型号信息</h4>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <div class="box-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="addSelect">设备类型：</label>
                                    <div class="col-sm-9">
                                        <select class="form-control" id="addSelect"></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="addModelName"><span class="text-red">* </span>设备型号：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addModelName" onfocusin="focusIn($(this))" maxlength="32">
                                        <label class="label-danger hidden" id="addModelNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="addDesc">描述：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="addDesc" maxlength="255">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="addModel()">添加</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="updateModel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">设备型号信息</h4>
                    <label class="hidden" id="updateId"></label>
                </div>
                <div class="modal-body">
                    <div class="box">
                        <div class="box-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="updateSelect">设备类型：</label>
                                    <div class="col-sm-9">
                                        <select class="form-control" id="updateSelect"></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="updateModelName"><span class="text-red">* </span>设备型号：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateModelName" onfocusin="focusIn($(this))" maxlength="32">
                                        <label class="label-danger hidden" id="updateModelNameTip"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="updateDesc">描述：</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" id="updateDesc" maxlength="255">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="updateModel()">修改</button>
                </div>
            </div>
        </div>
    </div>
</section>