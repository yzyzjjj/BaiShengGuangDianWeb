
@model object

@{
    ViewBag.Title = "趋势图统计";
    Layout = "_Layout";
}
<script src="~/mjs/StatisticManagement/trend.js"></script>
<section class="content">
    <h2 class="text-center">趋势图统计</h2>
    <div class="row">
        <div class="col-sm-3">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <b>请选择</b>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body" style="margin: 10px">
                    <div class="form-group">
                        <label class="control-label" for="selectDevice">选择设备：</label>
                        <select class="ms2 form-control" style="width: 100%" id="selectDevice" onchange="focusIn($(this))"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="selectStartDate">开始时间：</label>
                        <div class="form-inline">
                            <input type="text" id="selectStartDate" class="form_date form-control" style="width: 48%;">
                            -
                            <input type="text" id="selectStartTime" class="form_time form-control" style="width: 48%;">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="selectStartDate">结束时间：</label>
                        <div class="form-inline">
                            <input type="text" id="selectEndDate" class="form_date form-control" style="width: 48%;">
                            -
                            <input type="text" id="selectEndTime" class="form_time form-control" style="width: 48%;">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="selectPar">选择参数：</label>
                        @*<select class="ms2 form-control" style="width: 100%" id="selectPar" onchange="focusIn($(this))"></select>*@
                        <div class="form-inline" id="selectPar"></div>
                    </div>
                    <div class="form-group pull-right">
                        <button type="button" class="btn btn-primary btn-sm" onclick="createChart()">生成图表</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-9">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title" id="deviceCode">趋势图</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-primary" onclick="createChart()">重新加载</button>
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body" id="main"></div>
            </div>
        </div>
    </div>
</section>