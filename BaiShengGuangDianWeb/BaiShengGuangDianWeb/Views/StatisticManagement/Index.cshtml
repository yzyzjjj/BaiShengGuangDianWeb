
@model object

@{
    ViewBag.Title = "加工记录";
    Layout = "_Layout";
}
<script src="~/mjs/StatisticManagement/Index.js"></script>
<section class="content">
    <h2 class="text-center">加工记录统计</h2>
    <div class="row">
        <div class="hidden">
            <div class="col-sm-3">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">设备状态</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-primary" onclick="getDeviceChart()">重新加载</button>
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div id="deviceState" class="" style="width: 100%; height: 250px"></div>
                    </div>
                </div>
            </div>
            <div class="col-sm-9">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">加工记录</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-primary" onclick="getStatisticList()">重新加载</button>
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div id="main" style="border: 1px solid red; width: 100%; height: 500px"></div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="box box-primary">
                <div class="box-body">
                    <div class="form-group">
                        <label class="control-label" for="selectDevice">选择设备：</label>
                        <select class="ms2 form-control" style="width: 100%" multiple="multiple" id="selectDevice" onchange="focusIn($(this))"></select>
                    </div>
                    <div class="form-group form-inline">
                        <div class="form-group">
                            <label class="control-label">开始时间：</label>
                            <div class="form-group no-margin" style="display: -webkit-inline-box;">
                                <input type="text" id="selectStartDate" class="form_date form-control" style="width: 95px;">
                                <span>&nbsp;-&nbsp;</span>
                                <input type="text" id="selectStartTime" class="form_time form-control" style="width: 75px;">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">结束时间：</label>
                            <div class="form-group no-margin" style="display: -webkit-inline-box;">
                                <input type="text" id="selectEndDate" class="form_date form-control" style="width: 95px;">
                                <span>&nbsp;-&nbsp;</span>
                                <input type="text" id="selectEndTime" class="form_time form-control" style="width: 75px;">
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" onclick="createChart()">生成图表</button>
                        </div>
                    </div>
                    <div id="recordChart">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>