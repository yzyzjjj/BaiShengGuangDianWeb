                                            </div>
                                        </div>

                                        <div class="form-group productEl hidden">
                                            <label class="control-label">选择数据：</label>
                                            <div class="form-group no-margin" style="display: -webkit-inline-box">
                                                <div class="flexStyle" id="kanBanItems">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">选择设备：</label>
                                            <select class="form-control" id="deviceSelect" style="width: 100%"></select>
                                        </div>
                                        <div class="form-group text-center">
                                            <button class="btn btn-primary btn-flat" onclick="setAddKanBan(0)" style="width: 80px">修改</button>
                                            <button class="btn btn-success btn-flat" onclick="setAddKanBan(1)" style="width: 80px">添加</button>
                                        </div>

                                        <div class="form-group stateEl hidden" id="kanBanScript">
                                        </div>
                                        <div class="form-group productEl hidden">
                                            <h3 class="control-label text-bold text-red">布局预览：</h3>
                                            <div class="form-group kb_item_pre_div1 kb_body" id="kanBanProduct">
                                                <h3 class="text-center" style="padding-top: 10px; color: cyan; padding: 10px;">标题</h3>
                                                <div class="form-group kb_item_pre_div2" id="kanBanProductDetail">

                                                    @*<div class="kb_item_pre_div3">
                                                            <div class="kb_div1">
                                                                <div class="kb_border1">
                                                                    <div class="kb_border2">

                                                                        <table class="table table-striped">
                                                                            <thead>
                                                                            <tr role="row">
                                                                                <th colspan="2" class="bg-gray" rowspan="1" style="padding: 4px; border: 1px solid gray; width: auto;">切割</th>
                                                                            </tr>
                                                                            </thead>
                                                                            <tbody>
                                                                            <tr role="row" class="odd">
                                                                                <td style="padding: 4px; border: 1px solid gray; width: auto; display: table;">
                                                                                    <label class="control-label text-bold" style="display: table-cell;">顺序</label>
                                                                                    <input class="form-control text-center" style="display: table-cell;" placeholder="顺序" id="kanBanItemCol${i}" value=10 oninput="onInput(this, 3, 0);">
                                                                                </td>
                                                                                <td style="padding: 4px; border: 1px solid gray; width: auto; display: table;">
                                                                                    <label class="control-label text-bold" style="display: table-cell;">高度</label>
                                                                                    <input class="form-control text-center" style="display: table-cell;" placeholder="高度" id="kanBanItemCol${i}" value=10 oninput="onInput(this, 3, 0);">
                                                                                </td>
                                                                            </tr>
                                                                            </tbody>
                                                                        </table>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="kb_div1">
                                                                <div class="kb_border1">
                                                                    <div class="kb_border2">
                                                                        <div class="form-group">

                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>*@

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane fade in" id="carouselTab">
                                <div class="box box-primary">
                                    <div class="box-body">
                                        <div style="display: flex; flex-wrap: wrap;" id="carouselDiv">
                                        </div>
                                        <div class="form-group text-center">
                                            <button class="btn btn-primary btn-flat" onclick="fullScreenCarousel()" style="width: 80px">轮播</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<section class="panel-fullscreen" id="fullScreenCarousel" style="top:-100%; opacity: 0;background:white"></section>

