@model object

@{
    ViewBag.Title = "看板数据";
    Layout = "_Layout";
}
<link href="~/mcss/css/kb.css" rel="stylesheet" />
<link href="~/mcss/css/scrollTable.css" rel="stylesheet" />
<environment include="Development">
    <script src="~/mjs/StatisticManagement/kanBan.js"></script>
    <script src="~/lib/echarts/echarts.min.js"></script>
</environment>
<environment include="Staging,Production">
    <script src="~/mminjs/StatisticManagement/kanBan.min.js"></script>
    <script src="~/lib/echarts/echarts.min.js"></script>
</environment>
<section class="content-header">
    <h1>@ViewBag.Title</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>数据统计</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="nav-tabs-custom" id="tabBox">
            <ul class="nav nav-tabs ui-sortable-handle" id="navUl">
                <li class="active" id="firstNavLi"><a class="text-red text-bold" href="#setKanBan" data-toggle="tab" aria-expanded="true">设置相关</a></li>
                <li id="kanBan-1NavLi">@*<a href="#kanBan_6" class="kanBan" data-toggle="tab" aria-expanded="true">设备状态</a>*@</li>
            </ul>
            <div class="tab-content no-padding" style="position: relative">
                <div class="tab-pane active" id="setKanBan">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs ui-sortable-handle">
                            <li class="active"><a href="#setTab" data-toggle="tab" aria-expanded="true">设置</a></li>
                            <li><a href="#carouselTab" data-toggle="tab" aria-expanded="true">轮播</a></li>
                        </ul>
                        <div class="tab-content no-padding" style="position: relative">
                            <div class="tab-pane active" id="setTab">
                                <div class="box box-primary">
                                    <div class="box-body">

                                        <div style="display: flex; flex-wrap: wrap;">
                                            <div class="form-group">
                                                <label class="control-label">看板类型：</label>
                                                <div class="form-group no-margin" style="display: -webkit-inline-box">
                                                    <select class="form-control" id="kanBanType" style="width: 140px"></select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">看板列表：</label>
                                                <div class="form-group no-margin" style="display: -webkit-inline-box">
                                                    <select class="form-control" id="kanBanList" style="width: 140px"></select>
                                                </div>
                                                <button class="btn btn-danger" onclick="delKanBanList()">删除</button>
                                                <button class="btn btn-success" onclick="getKanBanList()">刷新</button>
                                            </div>
                                        </div>

                                        <div style="display: flex; flex-wrap: wrap;">
                                            <div class="form-group">
                                                <label class="control-label">看板名称：</label>
                                                <div class="form-group no-margin" style="display: -webkit-inline-box">
                                                    <input class="form-control" id="kanBanName" maxlength="40" style="width: 200px">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">界面刷新间隔（秒）：</label>
                                                <div class="form-group no-margin" style="display: -webkit-inline-box">
                                                    <input class="form-control" id="kanBanUI" value="5" oninput="onInput(this, 4, 0);" style="width: 200px">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">数据刷新间隔（秒）：</label>
                                                <div class="form-group no-margin" style="display: -webkit-inline-box">
                                                    <input class="form-control" id="kanBanSecond" value="5" oninput="onInput(this, 4, 0);" style="width: 200px">
                                                </div>
                                            </div>
                                            <div class="form-group stateEl hidden">
                                                <label class="control-label">行数：</label>
                                                <div class="form-group no-margin" style="display: -webkit-inline-box">
                                                    <input class="form-control" id="kanBanRow" value="8" oninput="onInput(this, 4, 0);" style="width: 200px">
                                                </div>
                                            </div>
                                            <div class="form-group stateEl productEl hidden">
                                                <label class="control-label">列数：</label>
                                                <div class="form-group no-margin" style="display: -webkit-inline-box">
                                                    <input class="form-control" id="kanBanCol" value="8" oninput="onInput(this, 4, 0);" style="width: 200px">
                                                </div>
                                            </div>
                                            <div class="form-group stateEl hidden">
                                                <label class="control-label">数据列数：</label>
                                                <div class="form-group no-margin" style="display: -webkit-inline-box">
                                                    <input class="form-control" id="kanBanContentCol" value="8" oninput="onInput(this, 4, 0, 2, 5);" style="width: 200px">
                                                </div>
